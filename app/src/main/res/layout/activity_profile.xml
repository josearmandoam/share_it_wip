<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.albaradocompany.jose.proyect_meme_clean.ui.activity.ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_iv_background"
                android:background="@drawable/fo3"
                android:layout_width="match_parent"
                android:alpha="0.75"
                android:layout_height="250dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_iv_photo"
                android:src="@drawable/face"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_alignBottom="@+id/profile_iv_background"
                />
            <TextView
                android:id="@+id/profile_tv_followers"
                android:text="@string/loading"
                android:layout_alignStart="@id/profile_iv_photo"
                android:layout_alignEnd="@id/profile_iv_photo"
                android:layout_above="@id/profile_iv_photo"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_title"
                android:fontFamily="@string/default_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/profile_tv_user_name"
                android:layout_alignBottom="@id/profile_iv_photo"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_title"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:fontFamily="@string/default_font"
                android:text="@string/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/profile_tv_user_number_photos"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="italic"
                android:fontFamily="@string/default_font"
                android:text="@string/loading"
                android:layout_above="@id/profile_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/profile_ibtn_edit_photo"
                android:visibility="gone"
                android:layout_alignTop="@id/profile_iv_photo"
                android:layout_alignEnd="@id/profile_iv_photo"
                android:layout_alignBottom="@id/profile_iv_photo"
                android:layout_alignStart="@id/profile_iv_photo"
                android:src="@drawable/edit"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/profile_ibtn_edit_background"
                android:visibility="gone"
                android:layout_alignTop="@id/profile_iv_background"
                android:layout_alignEnd="@id/profile_iv_background"
                android:layout_margin="10dp"
                android:background="@null"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/profile_ibtn_back"
                android:background="@null"
                android:src="@drawable/back"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_alignTop="@id/profile_ibtn_back"
                android:layout_alignBottom="@id/profile_ibtn_back"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v4.view.ViewPager
                android:layout_below="@id/profile_iv_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
