<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avatars_lyt_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/avatars_layout_avatar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/avatars_listAvatar"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/avatars_tv_empty_avatars"
            android:text="@string/no_avatar_available"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/avatars_pbr"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>