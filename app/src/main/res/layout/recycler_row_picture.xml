<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.albaradocompany.jose.proyect_meme_clean.ui.activity.PictureActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/picture_row_iv_photo"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/picture_row_iv_user_profile"
                android:layout_height="300dp"
                android:src="@drawable/fo3" />

            <View
                android:id="@+id/picture_row_vw_social"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_below="@+id/picture_row_iv_photo" />

            <!--<View-->
                <!--android:layout_below="@+id/picture_row_vw_social"-->
                <!--android:background="@color/color_login"-->
                <!--android:layout_alignStart="@+id/picture_row_vw_social"-->
                <!--android:layout_alignEnd="@+id/picture_row_vw_social"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="1dp" />-->

            <ImageButton
                android:id="@+id/picture_row_ibtn_like"
                android:src="@drawable/heart_border"
                android:background="@null"
                android:layout_alignTop="@+id/picture_row_vw_social"
                android:layout_alignBottom="@+id/picture_row_vw_social"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/picture_row_tv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/picture_row_ibtn_like"
                android:layout_alignTop="@+id/picture_row_vw_social"
                android:layout_alignBottom="@+id/picture_row_vw_social"
                android:text="255"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:fontFamily="@string/default_font"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/picture_row_ibtn_comments"
                android:src="@drawable/comment2"
                android:background="@null"
                android:layout_alignTop="@+id/picture_row_vw_social"
                android:layout_alignBottom="@+id/picture_row_vw_social"
                android:layout_toRightOf="@+id/picture_row_tv_likes"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/picture_row_tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/picture_row_ibtn_comments"
                android:layout_alignTop="@+id/picture_row_vw_social"
                android:layout_alignBottom="@+id/picture_row_vw_social"
                android:text="255"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:fontFamily="@string/default_font"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/picture_row_ibtn_save"
                android:src="@drawable/save_unclicked"
                android:background="@null"
                android:layout_alignTop="@+id/picture_row_vw_social"
                android:layout_alignBottom="@+id/picture_row_vw_social"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/picture_row_vw_user_info"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/picture_row_vw_social"
                android:layout_height="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture_row_iv_user_profile"
                android:layout_marginLeft="8dp"
                android:layout_width="50dp"
                android:src="@drawable/face"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/picture_row_tv_user_name1"
                android:layout_toRightOf="@+id/picture_row_iv_user_profile"
                android:layout_alignBottom="@+id/picture_row_iv_user_profile"
                android:layout_alignTop="@+id/picture_row_iv_user_profile"
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:text="JOAN MANUEL SERRAT"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:fontFamily="@string/default_font"
                android:layout_height="wrap_content" />
            <!--<View-->
                <!--android:id="@+id/picture_vw_sept_top"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_below="@+id/picture_row_iv_user_profile"-->
                <!--android:background="@color/color_login"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:layout_marginBottom="4dp"-->
                <!--android:layout_height="1dp"/>-->
            <TextView
                android:id="@+id/picture_row_tv_user_name2"
                android:layout_width="wrap_content"
                android:layout_alignTop="@+id/picture_row_vw_user_info"
                android:layout_alignBottom="@+id/picture_row_vw_user_info"
                android:paddingLeft="16dp"
                android:text="JOAN MANUEL SERRAT"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:fontFamily="@string/default_font"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/picture_row_tv_time"
                android:layout_width="wrap_content"
                android:layout_alignTop="@+id/picture_row_vw_user_info"
                android:layout_alignBottom="@+id/picture_row_vw_user_info"
                android:paddingEnd="16dp"
                android:layout_alignParentEnd="true"
                android:text="14H"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@string/default_font"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/picture_row_tv_description"
                android:layout_below="@+id/picture_row_vw_user_info"
                android:fontFamily="@string/default_font"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="@string/text_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/testThird"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
        </RelativeLayout>
</FrameLayout>
