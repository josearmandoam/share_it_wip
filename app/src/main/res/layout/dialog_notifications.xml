<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/notification_dialog_view"
        android:background="@color/testThird"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"/>
    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/notification_dialog_iv_profile"-->
        <!--android:src="@drawable/face"-->
        <!--android:layout_alignTop="@+id/notification_dialog_view"-->
        <!--android:layout_alignBottom="@id/notification_dialog_view"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="wrap_content" />-->
    <TextView
        android:id="@+id/notification_dialog_tv_name"
        android:layout_alignTop="@+id/notification_dialog_view"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_title"
        android:fontFamily="@string/default_font"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/notification_dialog_recycler"
        android:layout_below="@+id/notification_dialog_view"
        android:layout_above="@+id/notification_dialog_et_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/notification_dialog_vw_message"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/border_text_red"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"/>
    <EditText
        android:id="@+id/notification_dialog_et_message"
        android:layout_alignTop="@+id/notification_dialog_vw_message"
        android:layout_alignBottom="@+id/notification_dialog_vw_message"
        android:layout_alignStart="@+id/notification_dialog_vw_message"
        android:layout_toLeftOf="@+id/notification_dialog_ibtn_send"
        android:hint="@string/write_any_message"
        android:background="@null"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/notification_dialog_ibtn_send"
        android:src="@drawable/send_red"
        android:layout_alignEnd="@+id/notification_dialog_vw_message"
        android:layout_alignTop="@+id/notification_dialog_vw_message"
        android:layout_alignBottom="@+id/notification_dialog_vw_message"
        android:padding="8dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/notification_dialog_progressbar"
        android:visibility="gone"
        android:layout_alignEnd="@+id/notification_dialog_vw_message"
        android:layout_alignTop="@+id/notification_dialog_vw_message"
        android:layout_alignBottom="@+id/notification_dialog_vw_message"
        android:background="@drawable/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>