<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="1dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/photo_recycler_iv_picture"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:layout_width="200dp"
        android:layout_height="180dp" />
    <View
        android:id="@+id/photo_recycler_view"
        android:layout_alignBottom="@+id/photo_recycler_iv_like"
        android:layout_alignTop="@+id/photo_recycler_iv_like"
        android:layout_alignEnd="@id/photo_recycler_iv_picture"
        android:layout_alignStart="@id/photo_recycler_iv_picture"
        android:background="@color/color_login"
        android:alpha="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/photo_recycler_iv_like"
        android:src="@drawable/like"
        android:padding="5dp"
        android:background="@null"
        android:layout_alignStart="@id/photo_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/photo_recycler_tv_number_likes"
            android:layout_alignTop="@+id/photo_recycler_view"
            android:text="@string/default_likes"
            android:gravity="center"
            android:layout_toRightOf="@+id/photo_recycler_iv_like"
            android:layout_alignBottom="@+id/photo_recycler_view"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@string/default_font"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/photo_recycler_iv_comments"
            android:src="@drawable/comment"
            android:layout_toLeftOf="@+id/photo_recycler_tv_number_comments"
            android:background="@null"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/photo_recycler_tv_number_comments"
            android:layout_alignEnd="@+id/photo_recycler_iv_picture"
            android:layout_alignBottom="@+id/photo_recycler_view"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/photo_recycler_view"
            android:text="@string/default_likes"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@string/default_font"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>