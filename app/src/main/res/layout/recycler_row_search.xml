<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:id="@+id/search_row_lyt_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_row_iv_profle"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/search_row_tv_name"
        android:layout_toRightOf="@+id/search_row_iv_profle"
        android:paddingLeft="16dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:fontFamily="@string/default_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/search_row_tv_username"
        android:layout_below="@+id/search_row_tv_name"
        android:layout_toRightOf="@+id/search_row_iv_profle"
        android:paddingLeft="16dp"
        android:fontFamily="@string/default_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/search_row_btn_state"
        android:layout_alignParentEnd="true"
        android:background="@drawable/roundedbutton_blue"
        android:layout_marginTop="4dp"
        android:fontFamily="@string/default_font"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="16dp"
        android:layout_below="@+id/search_row_iv_profle"
        android:layout_alignStart="@+id/search_row_tv_name"
        android:background="@color/testThird"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
</RelativeLayout>