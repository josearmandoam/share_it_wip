<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_notification_tv_message"
        android:background="@drawable/roundedbutton_bluecorner"
        android:padding="8dp"
        android:layout_toRightOf="@+id/dialog_notification_iv_profile"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/dialog_notification_iv_profile"
        android:maxWidth="250dp"
        android:text="@string/text_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_notification_iv_profile"
        app:civ_border_color="@color/testThird"
        android:layout_marginRight="4dp"
        app:civ_border_width="2dp"
        android:src="@drawable/face"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/dialog_notification_tv_time"
        android:text="00:00"
        android:textColor="@android:color/background_dark"
        android:layout_toRightOf="@+id/dialog_notification_tv_message"
        android:layout_alignTop="@+id/dialog_notification_tv_message"
        android:layout_marginEnd="4dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>